{
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "outDir": "build/main",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "node",
            "electron"
        ]
    },
    "include": [
        "src/main/**/*.ts",
        "src/**/*.d.ts"
    ]
}